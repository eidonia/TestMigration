<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnChooseFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ouvrir un fichier"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toStartOf="@id/btnChangePage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnChangePage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Migrate folder"
        app:layout_constraintTop_toTopOf="@id/btnChooseFile"
        app:layout_constraintBottom_toBottomOf="@id/btnChooseFile"
        app:layout_constraintStart_toEndOf="@id/btnChooseFile"
        app:layout_constraintEnd_toStartOf="@id/btnChangeFile"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnChangeFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Migrate file"
        app:layout_constraintTop_toTopOf="@id/btnChooseFile"
        app:layout_constraintBottom_toBottomOf="@id/btnChooseFile"
        app:layout_constraintStart_toEndOf="@id/btnChangePage"
        app:layout_constraintEnd_toStartOf="@id/btnDeleteDoc"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDeleteDoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete File"
        app:layout_constraintTop_toTopOf="@id/btnChooseFile"
        app:layout_constraintBottom_toBottomOf="@id/btnChooseFile"
        app:layout_constraintStart_toEndOf="@id/btnChangeFile"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/gallery"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:listitem="@layout/gallery_layout"
        app:layout_constraintTop_toBottomOf="@id/btnChooseFile"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/txtchoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/gallery"
        app:layout_constraintBottom_toBottomOf="@id/gallery"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Choisis un fichier d'image"
        android:textStyle="bold"
        android:textSize="25dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>